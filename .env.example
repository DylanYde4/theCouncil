# Application settings
APP_DEBUG=true
APP_SECRET_KEY=your_secret_key_here
APP_CORS_ORIGINS=["*"]

# Database settings
DATABASE_URL=mongodb://localhost:27017/council_db

# Storage settings
AUTOMATION_STORAGE_DIR=data/automations

# Vercel Blob Storage (for production)
# Get from Vercel dashboard - needed for serverless storage
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# Local Blob Storage (for development)
LOCAL_BLOB_DIR=data/blobs

# Authentication settings
AUTH_ENABLED=false
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# Logging
LOG_LEVEL=INFO
LOG_CONSOLE=true
LOG_FILE=true

# Serverless Flags
# Set to 1 to test serverless mode locally
# VERCEL=0
LOG_DIR=logs
